mixin recipe(recipe)
  .grid-item.col-xs-12.col-md-6.col-lg-4.p-1
    .card
      .card-header.text-center
        h5.card-title #{recipe.name} (#{recipe.popularityScore})
        .card-subtitle
          a.text-muted(href=recipe.source.url) #{recipe.source.name}
      img.card-img-top(src=recipe.image alt=recipe.name)
      .card-body
        ul
          each ingredient in recipe.ingredients
            li= ingredient