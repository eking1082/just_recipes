mixin recipeCard(recipe, favorited)
  .grid-item.col-xs-12.col-md-6.col-lg-4.p-1(id=recipe._id)
    .card.border-secondary
      .card-header.text-center
        h5.card-title.text-dark #{recipe.name}
        h6.card-subtitle
          a.text-muted.no-underline(href=recipe.source.url target='_blank' data-toggle='tooltip' data-title=`Full recipe on ${recipe.source.name}`) #{recipe.source.name}
        i.fa-heart.fa-lg.favorite-btn.text-secondary(class=`fa${favorited ? 's' : 'r'}`)
      img.card-img.rounded-0(src=recipe.thumbnailUrl alt=recipe.name)
      .card-body.text-lowercase.p-3
        ul.list-group.list-group-flush
          each ingredient in recipe.ingredients
            li.list-group-item.list-group-item-action.p-1= ingredient