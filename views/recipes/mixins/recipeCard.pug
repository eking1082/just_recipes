mixin recipeCard(recipe)
  .grid-item.col-xs-12.col-md-6.col-lg-4.p-1
    .card.border-secondary
      .card-header.text-center
        h5.card-title
          a.text-dark.no-underline(href=`/recipe/${recipe.path}`) #{recipe.name}
        h6.card-subtitle
          a.text-muted.no-underline(href=recipe.source.url target='_blank') #{recipe.source.name}
      a(href=`/recipe/${recipe.path}`)
        img.card-img.rounded-0(src=recipe.thumbnailUrl alt=recipe.name)
      .card-body.text-lowercase.p-3
        ul.list-group.list-group-flush
          each ingredient in recipe.ingredients
            li.list-group-item.list-group-item-action.p-1= ingredient